  (data-source-name|jta-data-source-name),
  auto-create-db?,
  show-sql?,
  input-report-id?,
  input-report-name?,
  input-report-type?,
  input-entity-id?,
  input-entity-type-id?,
  input-creator-id?,
  input-permission-id?,
  input-sliding-window?,
  submit-name?,
  operation?,
  report-id?,
  url?)>

